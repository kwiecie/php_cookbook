{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_comment_create'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_comment_create'|trans }}</h1>
    {{ form_start(form, { method: 'POST', action: url('comment_create', {'id': app.recipe.id}) }) }}
    {{ form_widget(form) }}

    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('recipe_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}